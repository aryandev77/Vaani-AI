{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "gender": {
          "type": "string",
          "description": "The user's gender.",
          "enum": [
            "male",
            "female",
            "other",
            "prefer-not-to-say"
          ]
        },
        "dob": {
          "type": "string",
          "format": "date",
          "description": "The user's date of birth."
        },
        "nationality": {
          "type": "string",
          "description": "The user's nationality."
        },
        "spokenLanguages": {
          "type": "string",
          "description": "Languages spoken by the user, comma-separated."
        },
        "culturalPreferences": {
          "type": "string",
          "description": "User's cultural preferences and notes for better AI interaction."
        },
        "profileComplete": {
          "type": "boolean",
          "description": "Whether the user has completed their detailed profile setup."
        }
      },
      "required": [
        "name",
        "email"
      ]
    },
    "translation": {
      "title": "Translation Record",
      "description": "A record of a single translation event.",
      "type": "object",
      "properties": {
        "sourceText": {
          "type": "string",
          "description": "The original text provided by the user."
        },
        "translatedText": {
          "type": "string",
          "description": "The resulting translated text."
        },
        "sourceLang": {
          "type": "string",
          "description": "The source language of the translation."
        },
        "targetLang": {
          "type": "string",
          "description": "The target language for the translation."
        },
        "date": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp of when the translation occurred."
        },
        "culturalContext": {
          "type": "string",
          "description": "The cultural context provided for the translation."
        },
        "culturalInsights": {
          "type": "string",
          "description": "AI-generated cultural insights for the translation."
        }
      },
      "required": [
        "sourceText",
        "translatedText",
        "sourceLang",
        "targetLang",
        "date"
      ]
    },
    "feedback": {
      "title": "Translation Feedback",
      "description": "User-provided feedback on a translation.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user providing feedback."
        },
        "originalTranslationId": {
          "type": "string",
          "description": "The ID of the translation record being corrected."
        },
        "sourceText": {
          "type": "string",
          "description": "The original text provided by the user."
        },
        "originalTranslatedText": {
          "type": "string",
          "description": "The AI-generated translated text."
        },
        "userCorrectedText": {
          "type": "string",
          "description": "The correction provided by the user."
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp of when the feedback was submitted."
        }
      },
      "required": [
        "userId",
        "originalTranslationId",
        "sourceText",
        "originalTranslatedText",
        "userCorrectedText",
        "timestamp"
      ]
    }
  },
  "auth": {
    "providers": [
      "email"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "Stores public information about a user."
    },
    "/users/{userId}/translations/{translationId}": {
      "schema": {
        "$ref": "#/entities/translation"
      },
      "description": "Stores a user's translation history."
    },
    "/feedback/{feedbackId}": {
      "schema": {
        "$ref": "#/entities/feedback"
      },
      "description": "Stores all user feedback on translations to improve the AI model."
    }
  }
}